set xlabel "2{/Symbol q}, degree"
set ylabel "intensity"

set border linewidth 3

set style line  1 lc rgb '#72B830' lt 1 lw 2 pt  6 ps 1.0 #
set style line  2 lc rgb '#000000' lt 1 lw 2 pt  8 ps 1.5 #
set style line  3 lc rgb '#000000' lt 1 lw 1 pt 10 ps 1.5 #DB7093

set grid xtics ytics mxtics mytics

plot fname every ::5 u 1:2 w p title 'obs.' ls 1,\
     fname every ::5 u 1:3 w l title 'mod.' ls 2,\
     fname every ::5 u 1:4 w l title 'diff' ls 3
     
pause -1